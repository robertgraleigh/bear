// services.jade

extends layout

block content

	header(id='services-header')
		div(class='ui internally celled padded grid')
			div(id='services-header-img', class='ui nine wide column')
				h1(class='ui uppercase grey right aligned header', style="font-size: 6rem; color: #f7f7f7 !important;")
					span(class='blue bottom border') #{banner.heading}
					p #{banner.copy}
			div(class='ui seven wide column')
				h3(class='ui uppercase header') #{box.title}
				p #{box.copyOne}
				p #{box.copyTwo}
				a(class='ui basic blue button') #{box.buttonOne}
				a(class='ui basic grey button') #{box.buttonTwo}

	section(id='services')
		div(class='ui straight grey segment')
			div(class='ui container')
				div(class='ui padded centered grid')
					div(class='ui row')
						div(class='ten wide column')
							h2(class='ui uppercase grey center aligned header', style='font-size: 2rem;')
